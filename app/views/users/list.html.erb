<% @page_title = 'Usuarios del sistema' %>
<div>
  <%= link_to("Nuevo", {:action => 'new'}, :class => 'action new' ) %>
  <table class="table table-striped">
    <tr>
      <th>Name</th>
      <th>Surname</th>
      <th>Actions</th>
    </tr>
    <% @users.each do |user| %>
    <tr>
      <td><%= user.name %></td>
      <td><%= user.surname %></td>
      <td>
        <%= link_to("Show", {:action => 'show', :id => user.id}, :class => 'action show' ) %>
        <%= link_to("Edit", {:action => 'edit', :id => user.id}, :class => 'action edit' ) %>
        <%= link_to("Delete", {:action => 'delete', :id => user.id}, :class => 'action delete' ) %>
      </td>

    </tr>
    <% end %>
  </table>
</div>